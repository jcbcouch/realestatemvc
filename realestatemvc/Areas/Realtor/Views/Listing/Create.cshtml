                <div class="form-floating py-2 col-12">
                    <input asp-for="PhotoOne" class="form-control border-0 shadow" />
                    <label asp-for="PhotoOne" class="ms-2"></label>
                    <span asp-validation-for="PhotoOne" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="PhotoTwo" class="form-control border-0 shadow" />
                    <label asp-for="PhotoTwo" class="ms-2"></label>
                    <span asp-validation-for="PhotoTwo" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="PhotoThree" class="form-control border-0 shadow" />
                    <label asp-for="PhotoThree" class="ms-2"></label>
                    <span asp-validation-for="PhotoThree" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
