                <div class="form-floating py-2 col-12">
                    <input asp-for="Sqft" class="form-control border-0 shadow" />
                    <label asp-for="Sqft" class="ms-2"></label>
                    <span asp-validation-for="Sqft" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Bathrooms" class="form-control border-0 shadow" />
                    <label asp-for="Bathrooms" class="ms-2"></label>
                    <span asp-validation-for="Bathrooms" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="LotSize" class="form-control border-0 shadow" />
